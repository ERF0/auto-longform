OPENAI_API_KEY_AUTO_YT_SHORTS=<YOUR_OPENAI_API_KEY>
PEXELS_API_KEY=<YOUR_PEXELS_API_KEY>
ASSEMBLY_AI_API_KEY=<YOUR_ASSEMBLY_AI_API_KEY>
GEMINI_API_KEY=<YOUR_GEMINI_API_KEY>
VIDEO_STYLE=conversational
# VIDEO_STYLE=story  # use the short-story narrator prompts

# Optional: Override the Gemini-compatible chat model used for LLM calls
# LLM_MODEL=gemini-2.0-flash
# LLM_MAX_RETRIES=4
# LLM_RETRY_BASE_DELAY=2.0
# LLM_RETRY_MAX_DELAY=20.0
# LLM_THROTTLE_SECONDS=0.5

# Optional: Custom OpenAI base URL (for proxy servers, local models, etc.)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Override TTS model or fine tune caption/video rendering
# GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
# CAPTION_FONT_PATH=fonts/serif_caption.ttf
# CAPTION_COLOR=white

# Cron schedule for video generation (default: daily at noon UTC)
# Format: "minute hour day month day_of_week"
# Examples:
# - "0 12 * * *" (daily at noon)
# - "0 */6 * * *" (every 6 hours)
# - "0 9 * * 1-5" (weekdays at 9 AM)
CRON_SCHEDULE=0 12 * * *

# Set to "true" to run once on container startup and exit
RUN_ONCE=false

# Number of videos to generate per run
VIDEO_COUNT=4

# Enable for smaller canvas size and lower FPS on constrained machines
LOW_MEMORY_MODE=true

# Apprise URL for notifications (optional)
# Examples:
# - Discord: discord://webhook_id/webhook_token
# - Slack: slack://TokenA/TokenB/TokenC/Channel
# - Email: mailto://user:pass@gmail.com
# - Telegram: tgram://bottoken/ChatID
APPRISE_URL=

# Set to "true" to receive notifications on successful video generation/upload
# Default: false (only sends notifications on failures)
NOTIFY_ON_SUCCESS=false
